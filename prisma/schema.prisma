generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String      @id @default(uuid()) @db.Uuid
  telegramId     Int         @unique
  name           String?
  lastName       String?
  wallet         Int?
  favoriteModels UserModel[]
  createdDate    DateTime?   @map("created_date") @db.Timestamptz()

  @@map("users")
}

model FavoriteModelDTO {
  id           String      @id
  name         String
  architecture String
  users        UserModel[]
}

model UserModel {
  userId  String   @db.Uuid
  modelId String

  user    User     @relation(fields: [userId], references: [id])
  model   FavoriteModelDTO    @relation(fields: [modelId], references: [id])

  @@id([userId, modelId])
  @@map("favorite_models")
}