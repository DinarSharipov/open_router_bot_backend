generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String @id @default(uuid()) @db.Uuid
  telegramId     Int @unique
  name           String?
  lastName       String?
  wallet         Int?
  favoriteModels String[] @map("favorite_models")
  createdDate    DateTime? @map("created_date") @db.Timestamptz()
  @@map("users")
}
