generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String      @id @default(uuid()) @db.Uuid
  telegramId     Int         @unique
  name           String?
  lastName       String?
  wallet         Int?
  favoriteModels FavoriteModelDTO[]
  createdDate    DateTime?   @map("created_date") @db.Timestamptz()

  @@map("users")
}

model FavoriteModelDTO {
  id           String   @id @default(uuid()) @db.Uuid
  modelId      String
  name         String
  architecture String
  userId       String   @db.Uuid
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, id])
}